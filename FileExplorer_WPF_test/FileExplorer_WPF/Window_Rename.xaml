<Window x:Class="FileExplorer_WPF.Window_Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer_WPF"
        mc:Ignorable="d"
        Title="Window_Rename" Height="130" Width="410">
    <Grid>
        <Button x:Name="button_yes" Content="确 定" HorizontalAlignment="Left" Margin="350,43,0,0" VerticalAlignment="Top" Width="45" Height="25" Click="button_yes_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                    <Setter Property="BorderBrush" Value="#666666"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <Label x:Name="label" Content="重命名，请勿包含以下符号：" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="158"/>
        <Label x:Name="label_symbol" Content="" HorizontalAlignment="Left" Margin="168,0,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="textBox_name" BorderThickness="2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="330" Margin="10,43,0,0"/>
    </Grid>
</Window>
